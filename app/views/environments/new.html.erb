<%= form_for @environment, {:html => {:class => "form-horizontal"}} do |f| %>
  <fieldset>
    <legend>New Environment</legend>
    <div class="control-group">
      <%= f.label :name, 'Name', :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name%>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </fieldset>
<% end %>
